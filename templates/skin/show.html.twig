{% extends 'base.html.twig' %}

{% block title %}Skin{% endblock %}

{% block body %}
    <h1>Skin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ skin.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ skin.name }}</td>
            </tr>
            <tr>
                <th>Weapon</th>
                <td>{{ skin.weapon }}</td>
            </tr>
            <tr>
                <th>Rarity</th>
                <td>{{ skin.rarity }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ skin.price }}</td>
            </tr>
            <tr>
                <th>Float</th>
                <td>{{ skin.float }}</td>
            </tr>
            <tr>
                <th>Pattern</th>
                <td>{{ skin.pattern }}</td>
            </tr>
            <tr>
                <th>Stattrak</th>
                <td>{{ skin.stattrak ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ skin.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ skin.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_skin_index') }}">back to list</a>

    <a href="{{ path('app_skin_edit', {'id': skin.id}) }}">edit</a>

    {{ include('skin/_delete_form.html.twig') }}
{% endblock %}
